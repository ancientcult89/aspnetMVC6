@inherits LayoutComponentBase

<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <div class="d-grid gap-2">
                @foreach(string key in NavLinks.Keys)
                {
                    <MultiNavLink class="btn btn-outline-primary btn-block" href="@NavLinks[key]" ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">
                        @key
                    </MultiNavLink>
                }
            </div>
        </div>
        <div class="col">
            @Body
        </div>
    </div>
</div>

@code {
    public Dictionary<string, string[]> NavLinks = new Dictionary<string, string[]>
    {
        { "People", new string[] {"/people" , "/"} },
        { "Departments", new string[] {"/depts" , "/departments"} },
        { "Details", new string[] {"/person" } }
    };
}
